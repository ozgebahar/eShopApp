@model eShopApp.Admin.Models.RoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["Message"] != null)
{
<div class="alert alert-info">
    @TempData["Message"]
</div>}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Role" method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserRole" class="control-label"></label>
                <input asp-for="UserRole" class="form-control" />
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>
